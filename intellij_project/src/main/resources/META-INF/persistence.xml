<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">

    <persistence-unit name="telco_webapp" transaction-type="JTA">
        <jta-data-source>telco_db</jta-data-source>
        <class>it.polimi.telco_webapp.entities.Employee</class>
        <class>it.polimi.telco_webapp.entities.OptionalProduct</class>
        <class>it.polimi.telco_webapp.entities.ServicePackage</class>
        <class>it.polimi.telco_webapp.entities.Service</class>
        <class>it.polimi.telco_webapp.entities.Order</class>
        <class>it.polimi.telco_webapp.entities.User</class>
        <class>it.polimi.telco_webapp.entities.OptionsAvailable</class>
        <properties>
            <property name="eclipselink.logging.level" value="FINE" />
        </properties>
    </persistence-unit>
</persistence>
